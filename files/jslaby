call pathogen#infect()

set tabstop=4 shiftwidth=4 softtabstop=4
set smartindent
set autoindent
set smarttab
set expandtab
set nu
set nocompatible

syntax on
filetype indent on
set ic
set incsearch
set hlsearch
set smartcase
set hls
set lbr

set noswapfile
set nobackup
set nowritebackup

set autochdir
set wildmode=longest:full
set wildmenu
colorscheme desert 
set ruler

set backspace=indent,eol,start

set wmw=0
map <C-J> <C-W>j<C-W>_
map <C-K> <C-W>k<C-W>_
nmap <c-h> <c-w>h<c-w><Bar>
nmap <c-l> <c-w>l<c-w><Bar>
