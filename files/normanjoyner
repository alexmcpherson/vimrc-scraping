if has("syntax")
  syntax on
endif

" Line number, displacement in status bar
set ruler 

imap ii <Esc>

" -------------- Tabs -------------------
" Expand all tabs to spaces
set expandtab
" Set tab width to 4
set tabstop=4
" Expand all existing tab characters to spaces
retab
" Set number of spaces for indentation
set shiftwidth=4

" ----------- Other stuff --------------
" Show matching brackets
set showmatch

" Disable arrow keys to force hjkl movement 
inoremap  <Up>     <NOP>
inoremap  <Down>   <NOP>
inoremap  <Left>   <NOP>
inoremap  <Right>  <NOP>
noremap   <Up>     <NOP>
noremap   <Down>   <NOP>
noremap   <Left>   <NOP>
noremap   <Right>  <NOP>
